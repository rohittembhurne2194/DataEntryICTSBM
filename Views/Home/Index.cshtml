@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Index</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>

    <style>
        body {
            background-color: powderblue;
        }

        * {
            box-sizing: border-box;
            padding-top: 5px;
        }

        h3 {
            font-size: 30px;
            color: white;
            font-weight: bold;
            text-align: center;
        }

        .container {
            border-radius: 5px;
            background-color: #808080;
            width: 450px;
            height: 500px;
        }

        .btn:hover {
            background-color: grey;
            color: white;
        }

        .btn-outline-secondary {
            color: black;
            padding: 12px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .page-header {
            background: #fff;
            box-shadow: 2px 2px 2px rgba(0, 0, 0, 0.1);
            z-index: 8;
            padding: 20px;
            text-align: center;
        }

        .container-fluid {
            margin-right: auto;
            margin-left: auto;
        }

        .card {
            border-radius: 5px;
            background-color: #808080;
            height: auto;
            padding-bottom: 20px;
        }
    </style>
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3"></div>

            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h3>Advance GhantaGadi Management</h3>
                    </div>
                    <div class="card-body">
                        <!-- Row 1 -->
                        <div class="row" style="padding: 0px;">
                            <div class="col-sm-1"></div>
                            <div class="col-sm-5" style="padding-top: 20px; padding-right: 10%;">
                                <a asp-controller="DataEntry" asp-action="DataEntryHouse" style="font-weight:bold">
                                    <div class="page-header">House Count Table</div>
                                </a>
                            </div>
                            <div class="col-sm-5" style="padding-top: 20px; padding-right: 10%;">
                                <a asp-controller="DataEntry" asp-action="DataEntryDumpYard" style="font-weight:bold">
                                    <div class="page-header">DumpYard Count Table</div>
                                </a>
                            </div>
                            <div class="col-sm-1"></div>
                        </div>

                        <!-- Row 2 -->
                        <div class="row" style="padding: 0px;">
                            <div class="col-sm-1"></div>
                            <div class="col-sm-5" style="padding-top: 20px; padding-right: 10%;">
                                <a asp-controller="DataEntry" asp-action="DataEntryLiquid" style="font-weight:bold">
                                    <div class="page-header">Liquid Count Table</div>
                                </a>
                            </div>
                            <div class="col-sm-5" style="padding-top: 20px; padding-right: 10%;">
                                <a asp-controller="DataEntry" asp-action="DataEntryStreet" style="font-weight:bold">
                                    <div class="page-header">Street Count Table</div>
                                </a>
                            </div>
                            <div class="col-sm-1"></div>
                        </div>

                        <!-- Row 3: MasterPlate Count Table -->
                        <div class="row" style="padding: 0px;">
                            <div class="col-sm-1"></div>
                            <div class="col-sm-5" style="padding-top: 20px; padding-right: 10%; margin: 0 auto; float: none;">
                                <a asp-controller="DataEntry" asp-action="DataEntryMasterPlate" style="font-weight:bold">
                                    <div class="page-header text-center">
                                        MasterPlate Count Table
                                    </div>
                                </a>
                            </div>
                            <div class="col-sm-6"></div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3"></div>
        </div>
    </div>

    @if (ViewBag.errormsg != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.errormsg");
            };
        </script>
    }
</body>
</html>
